<h1><%= @blogger.name %> </h1>
<% total_likes = 0 %>
<br>
<% if !@blogger.posts.empty? %>
<% @blogger.posts.each do |p| %>
    <% if p.likes != nil %>
    <% total_likes += p.likes %>
    <% end %>     
<% end %> 
<p> Total likes: <%= total_likes %> </p>

<p>
<% most_liked_post = @blogger.posts.max_by {|p| p.likes} %>
Most liked Post: <%= link_to most_liked_post.title, post_path(most_liked_post) %>
</p>
<% end %>


