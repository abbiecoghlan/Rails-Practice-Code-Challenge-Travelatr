<% if @blogger.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@blogger.errors.count, "error") %>
      prohibited this blogger from being saved:
    </h2>

    <ul>
    <% @blogger.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %> 

<h1>Create a New Blogger</h1>
<%= form_for @blogger do |f| %> 
    <%= f.label "Name" %> 
    <%= f.text_field :name %>
    <br>    
    <br>
    <%= f.label "Age" %> 
    <%= f.text_field :age %>
    <br>
    <br>
    <%= f.label "Bio" %>
    <%= f.text_area :bio %>
    <br>
    <br>
<%= f.submit %>
<% end %>